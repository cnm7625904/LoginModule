<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:drawable="@drawable/base_rec_checkbox_check">
        <shape>
            <corners android:radius="0dp" />
        </shape>

    </item>
    <item android:state_checked="true" android:drawable="@drawable/base_rec_checkbox_check">       <shape>
        <corners android:radius="0dp" />
    </shape></item>
    <item android:state_pressed="true" android:drawable="@drawable/base_rec_checkbox_check">       <shape>
        <corners android:radius="0dp" />
    </shape></item>
    <item android:drawable="@drawable/base_rec_checkbox_uncheck">       <shape>
        <corners android:radius="0dp" />
    </shape></item>
</selector>
